{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "src",
        "paths": {
            "@/config": ["config/index"],
            "@/utils": ["utils/index"],
            "@/interfaces": ["interfaces"],
            "@/database": ["database/index"],
            "@/hooks": ["hooks/index"],
            "@/components": ["components/index"],
            "@/database/*": ["database/*"],
            "@/models": ["models/index"],
            "@/context": ["context/index"],
            "@/styles/*": ["styles/*"],
            "@/api": ["api/index"],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx", 
        "tailwind.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}